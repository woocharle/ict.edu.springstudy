<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="members">
	<select id="select" resultType="com.ict.db.VO">
		select * from members order by idx
	</select>
	
	<select id="onelist"  parameterType="String" resultType="com.ict.db.VO">
		select * from members where idx = #{idx}
	</select>
	
	
	<insert id="insert" parameterType="com.ict.db.VO">
		insert into members
		values(members_seq.nextval, #{m_id}, #{m_pw}, #{m_name}, #{m_age}, sysdate)
	</insert>
	
	<update id="update" parameterType="com.ict.db.VO">
		update members 
		set m_id=#{m_id}, m_name=#{m_name}, m_age=#{m_age}
		where idx = #{idx}
	</update>
	
	<delete id="delete" parameterType="com.ict.db.VO">
		Delete from members where idx = #{idx}
	</delete>
</mapper>
