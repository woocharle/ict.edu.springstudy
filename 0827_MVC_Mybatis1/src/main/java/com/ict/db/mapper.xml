<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="guestbook">
 
 	<select id="select" resultType="com.ict.db.VO">
		select * from guestbook order by idx
	</select>
	
	<select id="onelist"  parameterType="String" resultType="com.ict.db.VO">
		select * from guestbook where idx = #{idx}
	</select>
	
 	<insert id="insert" parameterType="com.ict.db.VO">
 		insert into guestbook
 		values(guestbook_seq.nextval, #{name}, #{subject}, #{content}, #{email}, #{pwd}, sysdate)
 	
 	</insert>
 	
 	<update id="update" parameterType="com.ict.db.VO">
 		update guestbook
 		set name=#{name}, subject=#{subject}, content=#{content}, email=#{email}
 		where idx=#{idx}
 	</update>
 	
 	<delete id="delete" parameterType="com.ict.db.VO">
 		delete from guestbook
 		where idx = #{idx}
 	
 	</delete>
 	
 </mapper>